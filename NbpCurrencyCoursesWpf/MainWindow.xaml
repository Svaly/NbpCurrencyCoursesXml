<Window x:Class="NbpCurrencyCoursesWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NbpCurrencyCoursesWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DatePicker x:Name="StartDate" HorizontalAlignment="Left" Margin="282,72,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="EndDate" HorizontalAlignment="Left" Margin="432,72,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="Currency" HorizontalAlignment="Left" Margin="109,72,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem IsSelected="True">USD</ComboBoxItem>
            <ComboBoxItem>EUR</ComboBoxItem>
            <ComboBoxItem>CHF</ComboBoxItem>
            <ComboBoxItem>GBP</ComboBoxItem>
        </ComboBox>
        <Button x:Name="Run" Content="Start" HorizontalAlignment="Left" Margin="585,63,0,0" VerticalAlignment="Top" Height="39" Width="72" Click="Run_Click"/>
        <TextBlock x:Name="Results" HorizontalAlignment="Center" Margin="0,204,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="172" Width="420"/>
    </Grid>
</Window>
